{
  "name": "k8s-adapter-monorepo",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "pnpm run -r --parallel dev",
    "start": "pnpm --filter @k8s-adapter/core start",
    "build": "pnpm run -r build",
    "lint": "eslint \"packages/**/*.ts\" --fix",
    "format": "prettier --write \"packages/**/*.ts\"",
    "clean": "pnpm -r --parallel clean"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.4.2",
    "typescript": "~5.5.4"
  },
  "lint-staged": {
    "packages/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,jsonc}": [
      "prettier --write"
    ]
  }
}
